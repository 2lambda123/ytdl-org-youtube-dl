#compdef {{programs}}
# https://github.com/zsh-users/zsh/blob/master/Etc/completion-style-guide

typeset -A opt_args
_arguments -S -s \
  {{flags}} \
  '*:URL:_urls'

case $state in
  external-downloader-args)
    case "${opt_args[--external-downloader]}" in
      curl) _curl
        ;;
      ffmpeg) _ffmpeg
        ;;
      httpie) _httpie
        ;;
      wget) _wget
        ;;
    esac
    ;;
esac
